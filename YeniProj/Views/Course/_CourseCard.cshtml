@model Course

    <div class="card mb-3" id="@Model.Id" >
        <div class="row g-0">
          <div class="col-md-4">
            <img src="~/img/@Model.Image" class="img-fluid rounded-start" alt="...">
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <h5 class="card-title">
                <a asp-controller="Course" asp-action="Details" asp-route-id="@Model.Id">@Model.Name</a>
                </h5>
              <p class="card-text">@Model.Description</p>

            </div>
          </div>
        </div>
      </div>